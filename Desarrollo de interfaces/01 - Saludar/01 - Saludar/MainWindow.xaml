<Window x:Class="_01___Saludar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_01___Saludar"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="boton" Content="Saludar" HorizontalAlignment="Left" Height="99" Margin="226,268,0,0" VerticalAlignment="Top" Width="328" FontSize="24" Click="Button_Click"/>
        <Label x:Name="titulo" Content="Introduce tu nombre" HorizontalAlignment="Left" Height="25" Margin="226,194,0,0" VerticalAlignment="Top" Width="328"/>
        <TextBox x:Name="caja" HorizontalAlignment="Left" Height="23" Margin="226,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328" TextChanged="TextBox_TextChanged"/>

    </Grid>
</Window>
