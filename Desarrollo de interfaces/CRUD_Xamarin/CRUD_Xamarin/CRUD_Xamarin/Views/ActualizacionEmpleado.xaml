<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUD_Xamarin.Views.ActualizacionEmpleado"
             xmlns:VM="clr-namespace:CRUD_Xamarin.ViewModels">
    <!--Esta pagina es para mostrar los datos de un empleado individual y es la misma página
    que la de actualización-->

    <ContentPage.BindingContext>
        <VM:VMActualizacionEmpleado />
    </ContentPage.BindingContext>
    
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding Path=VM.inputPerson}">
                <Entry Text="{Binding Source=id}"
                <Entry Text="{Binding}"
                <Entry Text="{Binding}"
                <Entry Text="{Binding}"
                <Entry Text="{Binding}"
                <Entry Text="{Binding}"
                <Entry Text="{Binding}"
                       
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>