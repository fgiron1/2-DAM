<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/opcionesContainer"
        android:name="com.example.fernandogirondominguezandroid.fragments.Opciones"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:layout_weight="0"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/insertContainer"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="48dp"
        android:layout_weight="0" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/listadoContainer"
        android:name="com.example.fernandogirondominguezandroid.fragments.Listado"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="48dp"
        android:layout_weight="0">

    </androidx.fragment.app.FragmentContainerView>

</LinearLayout>